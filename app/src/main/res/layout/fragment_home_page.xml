<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context="ui.fragments.homePage.HomePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_textviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!--Food Log Card-->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_food_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:textAppearance="?attr/textAppearanceHeadline5" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="4dp"
                            android:background="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_food3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="This is a test of the notes that can be added to each reading."
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary" />


                        <Button
                            android:id="@+id/btn_foodLog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/round_button"
                            android:backgroundTint="#EF5350"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:minHeight="48dp"
                            android:text="+ New Food"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />


                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <!--Exercise Log Card-->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_exercise_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exercise"
                            android:textAppearance="?attr/textAppearanceHeadline5" />

                        <TextView
                            android:id="@+id/tv_exercise3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="This is a test of the notes that can be added to each reading."
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="4dp"
                            android:background="@android:color/black" />

                        <Button
                            android:id="@+id/btn_exerciseLog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/round_button"
                            android:backgroundTint="#2196F3"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:minHeight="48dp"
                            android:text="+ New Exercise"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />


                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <!--Mood Log Card-->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_mood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_mood_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mood"
                            android:textAppearance="?attr/textAppearanceHeadline5" />

                        <TextView
                            android:id="@+id/tv_mood3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="This is a test of the notes that can be added to each reading."
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="4dp"
                            android:background="@android:color/black" />

                        <Button
                            android:id="@+id/btn_moodLog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/round_button"
                            android:backgroundTint="#9C27B0"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:minHeight="48dp"
                            android:text="+ New Mood Log"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />


                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <!--Stool Log Card-->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_stool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_stool_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BM"
                            android:textAppearance="?attr/textAppearanceHeadline5" />

                        <TextView
                            android:id="@+id/tv_stool3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="This is a test of the notes that can be added to each reading."
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="4dp"
                                android:background="@android:color/black" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_stoolLog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/round_button"
                            android:backgroundTint="#FF0266"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:minHeight="48dp"
                            android:text="+ New BM Log"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />


                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>